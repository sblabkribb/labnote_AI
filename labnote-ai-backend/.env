# labnote-ai-backend/.env
# This file contains environment variables for the backend server.
# It allows for easy configuration without changing the source code.

# Redis server connection URL
REDIS_URL="redis://localhost:6379"

# Ollama API base URL
OLLAMA_BASE_URL="http://127.0.0.1:11434"

# Name of the embedding model to use in Ollama
EMBEDDING_MODEL="nomic-embed-text"

# Name of the primary language model to use in Ollama
# This must match the name created with the 'ollama create' command.
LLM_MODEL="biollama3"